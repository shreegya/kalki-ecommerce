---
// Brands data
const brands = [
  { name: 'Anua', logo: '/logos/anua-logo.png' },
  { name: 'Samsung', logo: '/logos/samsungg.png' },
  { name: 'Sony', logo: '/logos/sony.png' },
  { name: 'LG', logo: '/logos/lg.png' },
  { name: 'CG', logo: '/logos/cg.png' }
];

// Duplicate brands for infinite loop effect
const sliderBrands = [...brands, ...brands, ...brands];
---

<section class="py-16 bg-gray-50 overflow-hidden">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-12">
      <h2 class="text-5xl font-bold text-gray-800 tracking-wide mb-2">Trusted By Industry Leaders</h2>
      <div class="w-12 h-0.5 bg-gradient-to-r from-transparent via-yellow-500 to-transparent mx-auto"></div>
    </div>
    
    <!-- Slider Container -->
    <div class="relative w-full overflow-hidden py-2">
      <div class="slider-track">
        {sliderBrands.map((brand, index) => (
          <div class="slider-slide flex-shrink-0 px-3">
            <div class="flex justify-center items-center h-20 w-40 bg-white rounded-lg transition-all duration-300 shadow-sm hover:shadow-lg hover:-translate-y-0.5 p-4 border border-gray-100 hover:border-gray-200">
              <img 
                src={brand.logo} 
                alt={brand.name}
                class="h-8 w-auto max-w-full object-contain opacity-80 hover:opacity-100 transition-all duration-300 grayscale hover:grayscale-0 drop-shadow-sm"
                loading="lazy"
                width="120"
                height="40"
              />
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  /* Slider styles */
  .slider-track {
    display: flex;
    width: max-content;
    animation: slide 30s linear infinite;
    will-change: transform;
  }

  .slider-slide {
    width: 180px;
    flex-shrink: 0;
    padding: 0 0.5rem;
  }

  @keyframes slide {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(calc(-180px * 5)); /* Move by the width of 5 brands */
    }
  }

  /* Pause on hover */
  .slider-track:hover {
    animation-play-state: paused;
  }

  /* Smooth transitions */
  .transition-all {
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }
  
  /* Responsive adjustments */
  @media (max-width: 1024px) {
    .slider-slide {
      width: 160px;
    }
  }

  @media (max-width: 768px) {
    .slider-slide {
      width: 140px;
    }
    
    .slider-track {
      animation-duration: 25s;
    }
    
    @keyframes slide {
      100% {
        transform: translateX(calc(-140px * 5));
      }
    }
  }

  @media (max-width: 480px) {
    .slider-slide {
      width: 120px;
    }
    
    .slider-track {
      animation-duration: 20s;
    }
    
    @keyframes slide {
      100% {
        transform: translateX(calc(-120px * 5));
      }
    }
  }
</style>
