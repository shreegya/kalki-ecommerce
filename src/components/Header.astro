---
// Tech Wave Header Component
---

<header class="fixed top-0 left-0 right-0 z-50 bg-white shadow-sm border-b border-gray-100">
	<div class="max-w-7xl mx-auto px-6 lg:px-8">
		<div class="flex justify-between items-center h-20">
			<!-- Logo Section -->
			<div class="flex items-center">
				<div class="flex-shrink-0">
					<div class="flex items-center space-x-2">
						<!-- Black medical cross icon -->
						<div class="w-8 h-8 bg-black rounded-sm flex items-center justify-center">
							<svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24">
								<path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm5 11h-4v4h-2v-4H7v-2h4V7h2v4h4v2z"/>
							</svg>
						</div>
						<span class="text-xl font-semibold text-gray-900 tracking-tight">Tech Wave</span>
					</div>
				</div>
			</div>

			<!-- Right Side Navigation and Search -->
			<div class="hidden md:flex items-center space-x-8">
				<!-- Navigation Menu -->
				<nav>
					<div class="flex items-center space-x-8">
						<a href="/store" class="text-gray-600 hover:text-black hover:bg-gray-100 px-3 py-2 text-sm font-normal rounded-lg transition-all duration-200">Store</a>
						<a href="/about" class="text-gray-600 hover:text-black hover:bg-gray-100 px-3 py-2 text-sm font-normal rounded-lg transition-all duration-200">About</a>
						<a href="/support" class="text-gray-600 hover:text-black hover:bg-gray-100 px-3 py-2 text-sm font-normal rounded-lg transition-all duration-200">Support</a>
						<a href="/contact" class="text-gray-600 hover:text-black hover:bg-gray-100 px-3 py-2 text-sm font-normal rounded-lg transition-all duration-200">Contact</a>
					</div>
				</nav>

				<!-- Search Bar -->
				<div class="relative">
					<input 
						type="text" 
						placeholder="Search" 
						class="w-56 pl-4 pr-10 py-2.5 text-sm text-gray-700 bg-gray-50 border-0 rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-200 focus:bg-white transition-all duration-200"
					>
					<button class="absolute inset-y-0 right-0 pr-3 flex items-center">
						<svg class="h-4 w-4 text-gray-400 hover:text-gray-600 transition-colors duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
						</svg>
					</button>
				</div>
			</div>

			<!-- Mobile Menu Button -->
			<div class="md:hidden">
				<button type="button" class="text-gray-600 hover:text-gray-300 focus:outline-none focus:text-gray-900 p-2 transition-colors duration-200">
					<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
					</svg>
				</button>
			</div>
		</div>
	</div>

	<!-- Mobile Navigation Menu (Hidden by default) -->
	<div class="md:hidden hidden" id="mobile-menu">
		<div class="px-4 pt-4 pb-6 space-y-3 bg-white border-t border-gray-100">
			<a href="/store" class="text-gray-600 hover:text-black hover:bg-gray-100 block px-3 py-2 text-base font-normal rounded-lg transition-all duration-200">Store</a>
			<a href="/about" class="text-gray-600 hover:text-black hover:bg-gray-100 block px-3 py-2 text-base font-normal rounded-lg transition-all duration-200">About</a>
			<a href="/support" class="text-gray-600 hover:text-black hover:bg-gray-100 block px-3 py-2 text-base font-normal rounded-lg transition-all duration-200">Support</a>
			<a href="/contact" class="text-gray-600 hover:text-black hover:bg-gray-100 block px-3 py-2 text-base font-normal rounded-lg transition-all duration-200">Contact</a>
			<div class="px-3 py-2">
				<div class="relative">
					<input 
						type="text" 
						placeholder="Search" 
						class="w-full pl-4 pr-10 py-2.5 text-sm text-gray-700 bg-gray-50 border-0 rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-200 focus:bg-white transition-all duration-200"
					>
					<button class="absolute inset-y-0 right-0 pr-3 flex items-center">
						<svg class="h-4 w-4 text-gray-400 hover:text-gray-600 transition-colors duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
						</svg>
					</button>
				</div>
			</div>
		</div>
	</div>
</header>

<script>
	// Mobile menu toggle functionality
	document.addEventListener('DOMContentLoaded', function() {
		const mobileMenuButton = document.querySelector('button[type="button"]');
		const mobileMenu = document.getElementById('mobile-menu');
		
		if (mobileMenuButton && mobileMenu) {
			mobileMenuButton.addEventListener('click', function() {
				mobileMenu.classList.toggle('hidden');
			});
		}
	});
</script>
