---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import CartPanel from '../../components/CartPanel.astro';
import { products } from '../../data/products.js';

export async function getStaticPaths() {
  return Object.keys(products).map(productId => ({
    params: { product: productId }
  }));
}

const { product } = Astro.params;
const productData = products[product as keyof typeof products];

if (!productData) {
  return Astro.redirect('/store');
}
---

<Layout title={`${productData.name} - Tech Wave Store`} description={productData.description}>
  <Header />
  
  <main class="pt-16 min-h-screen bg-white">
    <!-- Breadcrumb Navigation -->
    <div class="bg-gray-100 border-b border-gray-200 animate-fade-in">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
        <nav class="flex items-center space-x-2 text-sm text-gray-600">
          <a href="/store" class="hover:text-gray-900 transition-all duration-300 ease-out">Store</a>
          <span>/</span>
          <a href={`/store?category=${productData.categorySlug}`} class="hover:text-gray-900 transition-all duration-300 ease-out capitalize">{productData.category}</a>
          <span>/</span>
          <span class="text-gray-900">{productData.shortName || productData.name}</span>
        </nav>
      </div>
    </div>

    <!-- Product Detail Section -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="grid lg:grid-cols-2 gap-12">
        <!-- Product Images -->
        <div class="space-y-4 animate-slide-in-left">
          <!-- Main Image -->
          <div class="aspect-square bg-gradient-to-br from-gray-100 to-gray-200 rounded-2xl overflow-hidden border border-gray-300 hover:shadow-xl transition-all duration-500 ease-out transform hover:scale-[1.02]">
            <div class="w-full h-full flex items-center justify-center">
              <div class="w-32 h-32 bg-gray-300 rounded-full flex items-center justify-center">
                <svg class="w-16 h-16 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
              </div>
            </div>
          </div>
          
          <!-- Thumbnail Images -->
          <div class="grid grid-cols-4 gap-4">
            {productData.images.slice(0, 4).map((image: any, index: number) => (
              <div class="aspect-square bg-gradient-to-br from-gray-100 to-gray-200 rounded-lg overflow-hidden cursor-pointer hover:opacity-80 transition-all duration-300 ease-out border border-gray-300 hover:shadow-lg transform hover:scale-105">
                <div class="w-full h-full flex items-center justify-center">
                  <div class="w-8 h-8 bg-gray-300 rounded-full flex items-center justify-center">
                    <svg class="w-4 h-4 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>

        <!-- Product Information -->
        <div class="space-y-8 animate-slide-in-right">
          <!-- Category Badge -->
          <div class="animate-fade-in-up" style="animation-delay: 0.1s;">
            <span class="inline-block px-3 py-1 text-xs font-medium text-black bg-gray-100 rounded-full border border-gray-300 hover:bg-gray-200 transition-all duration-300 ease-out">
              {productData.category}
            </span>
          </div>

          <!-- Product Title -->
          <div class="animate-fade-in-up" style="animation-delay: 0.2s;">
            <h1 class="text-3xl sm:text-4xl font-bold text-black mb-2 hover:text-gray-800 transition-all duration-300 ease-out">
              {productData.name}
            </h1>
            <p class="text-lg text-gray-600 hover:text-gray-700 transition-all duration-300 ease-out">
              {productData.shortName || productData.name}
            </p>
          </div>

          <!-- Product Description -->
          <div class="animate-fade-in-up" style="animation-delay: 0.3s;">
            <p class="text-gray-700 leading-relaxed hover:text-gray-800 transition-all duration-300 ease-out">
              {productData.longDescription}
            </p>
          </div>

          <!-- Price -->
          <div class="animate-fade-in-up" style="animation-delay: 0.4s;">
            <span class="text-3xl font-bold text-black hover:text-gray-800 transition-all duration-300 ease-out">
              ${productData.price} USD
            </span>
          </div>

          <!-- Add to Cart Section -->
          <div class="space-y-4 animate-fade-in-up" style="animation-delay: 0.5s;">
            <button data-add-to-cart class="w-full bg-gray-300 text-white py-4 px-8 rounded-full hover:bg-gray-700 transition-all duration-300 ease-out font-semibold text-lg shadow-lg hover:shadow-gray-500/25 transform hover:scale-[1.02] hover:-translate-y-1">
              Add to Cart
            </button>
            <button class="w-full bg-black text-white py-4 px-8 rounded-full hover:bg-gray-800 transition-all duration-300 ease-out font-semibold text-lg shadow-lg hover:shadow-gray-500/25 transform hover:scale-[1.02] hover:-translate-y-1">
              Buy Now
            </button>
            <button class="w-full border-2 border-gray-600 text-gray-600 py-4 px-8 rounded-full hover:border-black hover:text-black transition-all duration-300 ease-out font-semibold transform hover:scale-[1.02] hover:-translate-y-1">
              Add to Wishlist
            </button>
          </div>

          <!-- Features -->
          <div class="animate-fade-in-up" style="animation-delay: 0.6s;">
            <h3 class="text-lg font-semibold text-black mb-4 hover:text-gray-800 transition-all duration-300 ease-out">Key Features</h3>
            <ul class="grid grid-cols-1 sm:grid-cols-2 gap-2">
              {productData.features.map((feature: any, index: number) => (
                <li class="flex items-center text-gray-700 hover:text-gray-800 transition-all duration-300 ease-out transform hover:translate-x-1">
                  <svg class="w-4 h-4 text-green-600 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  {feature}
                </li>
              ))}
            </ul>
          </div>

          <!-- Specifications -->
          <div class="animate-fade-in-up" style="animation-delay: 0.7s;">
            <h3 class="text-lg font-semibold text-black mb-4 hover:text-gray-800 transition-all duration-300 ease-out">Specifications</h3>
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              {productData.specifications && Object.entries(productData.specifications).map(([key, value]) => (
                <div class="flex justify-between py-2 border-b border-gray-300 hover:bg-gray-50 transition-all duration-300 ease-out rounded px-2">
                  <span class="text-gray-600 hover:text-gray-800 transition-all duration-300 ease-out">{key}</span>
                  <span class="text-gray-800 font-medium hover:text-black transition-all duration-300 ease-out">{value}</span>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>

      <!-- Customer Reviews Section -->
      <div class="mt-20 animate-fade-in-up" style="animation-delay: 0.8s;">
        <h2 class="text-2xl font-bold text-black mb-8 hover:text-gray-800 transition-all duration-300 ease-out">Customer Reviews</h2>
        <div class="grid md:grid-cols-3 gap-8">
          <!-- Review 1 -->
          <div class="bg-gray-50 p-6 rounded-2xl shadow-lg border border-gray-200 hover:shadow-xl transition-all duration-300 ease-out transform hover:scale-[1.02] hover:-translate-y-1">
            <div class="flex items-center mb-4">
              <div class="w-10 h-10 bg-gray-100 rounded-full flex items-center justify-center mr-3 border border-gray-300">
                <span class="text-black font-semibold">JD</span>
              </div>
              <div>
                <h4 class="font-semibold text-black">John Doe</h4>
                <div class="flex items-center">
                  {[...Array(5)].map(() => (
                    <svg class="w-4 h-4 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                    </svg>
                  ))}
                </div>
              </div>
            </div>
            <p class="text-gray-700 text-sm">
              "Absolutely love this product! The quality is outstanding and it exceeded all my expectations. Highly recommend!"
            </p>
          </div>

          <!-- Review 2 -->
          <div class="bg-gray-50 p-6 rounded-2xl shadow-lg border border-gray-200 hover:shadow-xl transition-all duration-300 ease-out transform hover:scale-[1.02] hover:-translate-y-1">
            <div class="flex items-center mb-4">
              <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center mr-3 border border-green-300">
                <span class="text-green-700 font-semibold">SM</span>
              </div>
              <div>
                <h4 class="font-semibold text-black">Sarah Miller</h4>
                <div class="flex items-center">
                  {[...Array(5)].map(() => (
                    <svg class="w-4 h-4 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                    </svg>
                  ))}
                </div>
              </div>
            </div>
            <p class="text-gray-700 text-sm">
              "Great value for money. The design is sleek and modern, perfect for my workspace. Delivery was fast too!"
            </p>
          </div>

          <!-- Review 3 -->
          <div class="bg-gray-50 p-6 rounded-2xl shadow-lg border border-gray-200 hover:shadow-xl transition-all duration-300 ease-out transform hover:scale-[1.02] hover:-translate-y-1">
            <div class="flex items-center mb-4">
              <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center mr-3 border border-blue-300">
                <span class="text-blue-700 font-semibold">MJ</span>
              </div>
              <div>
                <h4 class="font-semibold text-black">Mike Johnson</h4>
                <div class="flex items-center">
                  {[...Array(5)].map(() => (
                    <svg class="w-4 h-4 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                    </svg>
                  ))}
                </div>
              </div>
            </div>
            <p class="text-gray-700 text-sm">
              "Excellent product quality and customer service. Will definitely purchase from Tech Wave again!"
            </p>
          </div>
        </div>
      </div>

      <!-- Related Products Section -->
      <div class="mt-20 animate-fade-in-up" style="animation-delay: 0.9s;">
        <h2 class="text-2xl font-bold text-black mb-8 hover:text-gray-800 transition-all duration-300 ease-out">Related Products</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          {Object.values(products).filter(p => p.id !== productData.id).slice(0, 4).map(relatedProduct => (
            <a href={`/store/${relatedProduct.id}`} class="product-card group bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-500 transform hover:-translate-y-2 overflow-hidden border border-gray-200">
              <div class="relative overflow-hidden">
                <div class="aspect-square bg-gradient-to-br from-gray-100 to-gray-200 flex items-center justify-center">
                  <div class="w-20 h-20 bg-gray-300 rounded-full flex items-center justify-center">
                    <svg class="w-10 h-10 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                  </div>
                </div>
              </div>
              <div class="p-4">
                <div class="mb-2">
                  <span class="inline-block px-2 py-1 text-xs font-medium text-black bg-gray-100 rounded-full border border-gray-300">
                    {relatedProduct.category}
                  </span>
                </div>
                <h3 class="text-sm font-semibold text-black mb-2 group-hover:text-gray-600 transition-colors">
                  {relatedProduct.shortName || relatedProduct.name}
                </h3>
                <div class="flex items-center justify-between">
                  <span class="text-lg font-bold text-black">${relatedProduct.price}</span>
                </div>
              </div>
            </a>
          ))}
        </div>
      </div>
    </div>
  </main>
  
  <CartPanel />
</Layout>

<style>
  /* Product card animations */
  .product-card {
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .product-card:hover {
    transform: translateY(-8px);
  }
  
  /* Smooth transitions */
  * {
    transition-property: color, background-color, border-color, transform;
    transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
    transition-duration: 150ms;
  }

  /* Tech Wave Style Animations */
  @keyframes fade-in {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes slide-in-left {
    from {
      opacity: 0;
      transform: translateX(-50px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes slide-in-right {
    from {
      opacity: 0;
      transform: translateX(50px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .animate-fade-in {
    animation: fade-in 0.8s ease-out forwards;
  }

  .animate-fade-in-up {
    animation: fade-in-up 0.8s ease-out forwards;
    opacity: 0;
  }

  .animate-slide-in-left {
    animation: slide-in-left 0.8s ease-out forwards;
    opacity: 0;
  }

  .animate-slide-in-right {
    animation: slide-in-right 0.8s ease-out forwards;
    opacity: 0;
  }

  /* Staggered animation delays for smooth flow */
  .animate-fade-in-up:nth-child(1) { animation-delay: 0.1s; }
  .animate-fade-in-up:nth-child(2) { animation-delay: 0.2s; }
  .animate-fade-in-up:nth-child(3) { animation-delay: 0.3s; }
  .animate-fade-in-up:nth-child(4) { animation-delay: 0.4s; }
  .animate-fade-in-up:nth-child(5) { animation-delay: 0.5s; }
  .animate-fade-in-up:nth-child(6) { animation-delay: 0.6s; }
  .animate-fade-in-up:nth-child(7) { animation-delay: 0.7s; }

  /* Enhanced hover effects */
  .hover-lift {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .hover-lift:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  }
</style>
