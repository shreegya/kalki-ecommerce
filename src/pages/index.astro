		<!-- Progress Bar -->
		<div class="absolute bottom-0 left-0 w-full h-1 bg-white/20 z-20">
			<div class="carousel-progress h-full bg-white transition-all duration-100 ease-linear" style="width: 0%"></div>
		</div>
	</section>


	

