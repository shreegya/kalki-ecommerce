---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import FlyingCardsCategories from '../components/FlyingCardsCategories.tsx';
---

<Layout title="Tech Wave - Leading Technology Solutions">
	<Header />
	
	<!-- Hero Carousel Section -->
	<section class="relative w-full h-screen overflow-hidden bg-gray-900" id="hero-carousel">
		<!-- Carousel Container -->
		<div class="relative w-full h-full">
			<!-- Slide 1: Summer Sale -->
			<div class="carousel-slide absolute inset-0 w-full h-full opacity-0 transition-opacity duration-1000 ease-in-out" data-slide="0">
		<div class="absolute inset-0">
			<img 
				src="/hero-image.jpg" 
						alt="Summer Sale - Up to 50% Off" 
				class="w-full h-full object-cover"
				style="object-position: center 30%;"
						loading="eager"
						decoding="async"
			>
					<!-- Gradient overlay -->
					<div class="absolute inset-0 bg-gradient-to-r from-black/60 via-black/30 to-transparent"></div>
		</div>

				<!-- Content -->
				<div class="relative z-10 h-full flex items-center">
					<div class="max-w-6xl mx-auto px-6 lg:px-16 w-full">
						<div class="max-w-2xl">
							<h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-white mb-6 leading-tight" style="font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif; text-shadow: 2px 2px 4px rgba(0,0,0,0.8);">
								<span class="block">Summer</span>
								<span class="block font-bold text-yellow-400" style="text-shadow: 2px 2px 4px rgba(0,0,0,0.9);">Sale</span>
							</h1>
							<p class="text-lg sm:text-xl text-white mb-8 leading-relaxed font-normal" style="font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif; text-shadow: 1px 1px 3px rgba(0,0,0,0.8);">
								Up to 50% off on our entire summer collection. Limited time offer!
							</p>
							<div class="flex flex-col sm:flex-row gap-4">
								<a href="/store" class="inline-flex items-center px-6 py-3 bg-yellow-400 text-black text-base font-semibold rounded-lg hover:bg-yellow-300 transition-all duration-300 shadow-lg hover:shadow-xl" style="font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif; text-shadow: none;">
									Shop Now
									<svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
				</svg>
								</a>
								<a href="/store" class="inline-flex items-center px-6 py-3 border-2 border-white text-white text-base font-semibold rounded-lg hover:bg-white hover:text-black transition-all duration-300" style="font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif; text-shadow: 1px 1px 2px rgba(0,0,0,0.5);">
									View Collection
								</a>
							</div>
						</div>
					</div>
				</div>
			</div>
			
			<!-- Slide 2: New Arrivals -->
			<div class="carousel-slide absolute inset-0 w-full h-full opacity-0 transition-opacity duration-1000 ease-in-out" data-slide="1">
				<div class="absolute inset-0">
					<img 
						src="/hero-image1.jpg" 
						alt="New Arrivals - Discover Latest Products" 
						class="w-full h-full object-cover"
						style="object-position: center 40%;"
						loading="lazy"
						decoding="async"
					>
					<!-- Gradient overlay -->
					<div class="absolute inset-0 bg-gradient-to-l from-black/60 via-black/30 to-transparent"></div>
			</div>
			
				<!-- Content -->
