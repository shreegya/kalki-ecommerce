<Layout title="Tech Wave - Leading Technology Solutions">
	<Header />
	
	<!-- Hero Carousel Section -->
	<section class="relative w-full h-screen overflow-hidden bg-gray-900" id="hero-carousel">
		<!-- Carousel Container -->
		<div class="relative w-full h-full">
			<!-- Slide 1: Summer Sale -->
			<div class="carousel-slide absolute inset-0 w-full h-full opacity-100 transition-opacity duration-1000 ease-in-out" data-slide="0">
