<style>
	/* Product card animations */
	.product-card {
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
	}
	
	.product-card:hover {
		transform: translateY(-4px);
	}
	
	/* Filter button styles */
	.filter-btn {
		background-color: #f0f0f0;
		color: #000000;
		border: 1px solid transparent;
	}
	
	.filter-btn:hover {
		background-color: #e0e0e0;
		transform: translateY(-1px);
	}
	
	.filter-btn-active {
		background-color: #000000;
		color: #ffffff;
	}
	
	.filter-btn-active:hover {
		background-color: #1a1a1a;
	}
	
	/* Load more button animations */
	.load-more-btn {
		transition: all 0.3s ease;
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
	}
	
	.load-more-btn:hover {
		box-shadow: 0 4px 16px rgba(0, 0, 0, 0.2);
	}
	
	/* Responsive grid adjustments */
	@media (max-width: 1199px) {
		.product-card > div {
			width: 100% !important;
			max-width: 360px;
		}
	}
	
	@media (max-width: 767px) {
		.product-card > div {
			width: 100% !important;
			max-width: none;
		}
	}
</style>

<script>
	// Filter functionality
	document.addEventListener('DOMContentLoaded', function() {
		const filterBtns = document.querySelectorAll('.filter-btn') as NodeListOf<HTMLElement>;
		const productCards = document.querySelectorAll('.product-card') as NodeListOf<HTMLElement>;
		
		filterBtns.forEach(btn => {
			btn.addEventListener('click', function(this: HTMLElement) {
				// Remove active class from all buttons
				filterBtns.forEach(b => {
					b.classList.remove('filter-btn-active');
					b.style.backgroundColor = '#f0f0f0';
					b.style.color = '#000000';
				});
				
				// Add active class to clicked button
				this.classList.add('filter-btn-active');
				this.style.backgroundColor = '#000000';
				this.style.color = '#ffffff';
				
				// Get filter value
				const filterValue = this.textContent?.trim().toLowerCase() || '';
				
				// Filter products (for demo, show all products)
				productCards.forEach(card => {
					card.style.display = 'block';
				});
			});
		});
	});
</script>
